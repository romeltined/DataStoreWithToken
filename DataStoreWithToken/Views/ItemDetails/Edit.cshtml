@model DataStoreWithToken.Models.ItemDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ItemDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ItemDetailName" class="control-label"></label>
                <input asp-for="ItemDetailName" class="form-control" />
                <span asp-validation-for="ItemDetailName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemDetailValue" class="control-label"></label>
                <input asp-for="ItemDetailValue" class="form-control" />
                <span asp-validation-for="ItemDetailValue" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cancelled" /> @Html.DisplayNameFor(model => model.Cancelled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataStoreItemId" class="control-label"></label>
                <select asp-for="DataStoreItemId" class="form-control" asp-items="ViewBag.DataStoreItemId"></select>
                <span asp-validation-for="DataStoreItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
