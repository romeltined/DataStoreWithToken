@model IEnumerable<DataStoreWithToken.Models.Token>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OtpHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TokenHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revoked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataStore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OtpHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TokenHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Revoked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataStore.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
